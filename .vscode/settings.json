{
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-xelatex",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-auxdir=aux",
                "-emulate-aux-dir",
                "%DOC%"
            ],
            "env": {}
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk",
            "tools": ["latexmk"]
        }
    ],
    "latex-workshop.latexindent.args": [
        "-c",
        "%DIR%/",
        "%TMPFILE%",
        "-l=%WORKSPACE_FOLDER%/.latexindent.yaml"
    ],
    "latex-workshop.linting.chktex.enabled": true,
    "latex-workshop.linting.chktex.exec.args": [
        // "-l",
        // "%WS1%/.chktexrc",
        // LaTeX Workshop will look for .chktexrc in the project root.
        // However, there seems to be a issue that the plugin does not expand
        // manually specified paths correctly.
        //
        // All other options are specified in `.chktexrc`.
    ],
    "cSpell.words": [
        "amsthm",
        "chktex",
        "chktexrc",
        "doublespace",
        "hyph",
        "lwarp",
        "multicols",
        "newpx",
        "newpxmath",
        "Pagella",
        "Palatino",
        "pseudocode",
        "subfigures",
        "texlive",
        "texmf"
    ]
}
