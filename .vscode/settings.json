{
    // Build (latexmk)
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": ["%DOC%"], // `.latexmkrc` will be read
            "env": {}
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk",
            "tools": ["latexmk"]
        }
    ],

    // Formatter
    "latex-workshop.latexindent.args": [
        "-c",
        "%DIR%/",
        "%TMPFILE%",
        "-l=%WORKSPACE_FOLDER%/.latexindent.yaml"
    ],
    "latex-workshop.bibtex-format.tab": "4 spaces",
    "latex-workshop.bibtex-format.sort.enabled": true,
    "latex-workshop.bibtex-fields.sort.enabled": true,
    "latex-workshop.bibtex-format.align-equal.enabled": false,

    // ChkTeX
    "latex-workshop.linting.chktex.enabled": true,
    "latex-workshop.linting.chktex.exec.args": ["-l", "./nonexistent"],
    // Work around an issue. ChkTeX will detect `.chktexrc` file in the current
    // directory. However, the LaTeX Workshop extension will specify the same
    // file again by the `-l` option. The file will thus be read twice. If the
    // file contains any user-defined pattern, ChkTeX will warning about the
    // same occurrence twice. The only workaround is to specify a non-existent
    // file for the LaTeX Workshop extension.

    "cSpell.words": [
        "amsthm",
        "Antiqua",
        "beamer",
        "biblatex",
        "bmatrix",
        "cbmio",
        "cenumerate",
        "chktex",
        "chktexrc",
        "citemize",
        "cleveref",
        "csquotes",
        "delims",
        "doublespace",
        "egame",
        "Envir",
        "Fira",
        "footmarkoff",
        "Granet",
        "hyph",
        "ifclassloaded",
        "latexindent",
        "libexec",
        "lwarp",
        "Microtypography",
        "multicols",
        "newpx",
        "newpxmath",
        "otfinfo",
        "Pagella",
        "pageref",
        "Palatino",
        "perpage",
        "pmatrix",
        "pseudocode",
        "sgamex",
        "subfigure",
        "subfigures",
        "tblr",
        "texlive",
        "texmf",
        "texttt",
        "tion",
        "varepsilon",
        "varphi",
        "vmatrix"
    ]
}
