{
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-xelatex",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-auxdir=aux",
                "-emulate-aux-dir",
                "%DOC%"
            ],
            "env": {}
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk",
            "tools": ["latexmk"]
        }
    ],
    "latex-workshop.latexindent.args": [
        "-c",
        "%DIR%/",
        "%TMPFILE%",
        "-l=%WORKSPACE_FOLDER%/.latexindent.yaml"
    ],
    "latex-workshop.linting.chktex.enabled": true,
    "latex-workshop.linting.chktex.exec.args": [
        // "-l",
        // "%WS1%/.chktexrc",
        // LaTeX Workshop will look for .chktexrc in the project root.
        // However, there seems to be a issue that the plugin does not expand
        // manually specified paths correctly.
        //
        // All other options are specified in `.chktexrc`.
    ],
    "cSpell.words": [
        "amsthm",
        "beamer",
        "bibitem",
        "bmatrix",
        "chktex",
        "chktexrc",
        "citealp",
        "citealt",
        "citeauthor",
        "citep",
        "citet",
        "citetext",
        "citeyear",
        "citeyearpar",
        "Cleveref",
        "cmidrule",
        "cpagerefrange",
        "crefrange",
        "Delims",
        "doublespace",
        "eqref",
        "hyph",
        "includeonly",
        "latexindent",
        "libexec",
        "listinginput",
        "lwarp",
        "multicols",
        "natbib",
        "newpx",
        "newpxmath",
        "nocite",
        "Pagella",
        "pageref",
        "Palatino",
        "pmatrix",
        "pseudocode",
        "sgamex",
        "subfigures",
        "texlive",
        "texmf",
        "textipa",
        "texttt",
        "tipa",
        "verbatiminput",
        "verbatimtabinput",
        "vmatrix"
    ]
}
