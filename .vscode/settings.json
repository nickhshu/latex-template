{
    // Note that VS Code does not support local keybindings. See the global
    // `keybindings.json` file for LaTeX-related keybindings.

    "[latex]": {
        "editor.rulers": [],
        "editor.wordWrap": "on",
        "editor.suggest.showWords": false
    },
    "[bibtex]": {
        "editor.rulers": [],
        "editor.wordWrap": "on",
        "editor.suggest.showWords": false
    },

    // No notifications for errors and warnings
    "latex-workshop.message.error.show": false,
    "latex-workshop.message.warning.show": false,

    // Build (latexmk)
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": ["%DOC%", "-r", "%WORKSPACE_FOLDER%/.latexmkrc"],
            // The path to `.latexmkrc` must be specified. Otherwise `latexmk`
            // will not find it when compiling files in subdirectories.
            "env": {}
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk",
            "tools": ["latexmk"]
        }
    ],

    // Formatter
    "latex-workshop.formatting.latex": "latexindent",
    "latex-workshop.formatting.latexindent.args": [
        "-g",
        "/dev/null",
        // no `indent.log`, see <https://github.com/cmhughes/latexindent.pl/releases/tag/V3.9.3>
        "%TMPFILE%",
        "-l=%WORKSPACE_FOLDER%/.latexindent.yaml"
    ],
    "latex-workshop.bibtex-format.tab": "4 spaces",
    "latex-workshop.bibtex-format.sort.enabled": true,
    "latex-workshop.bibtex-fields.sort.enabled": true,
    "latex-workshop.bibtex-format.align-equal.enabled": false,

    // ChkTeX
    "latex-workshop.linting.chktex.enabled": true,
    "latex-workshop.linting.chktex.exec.args": [],
    // Note that the same file might be loaded twice, causing duplicate
    // warnings. No other arrangement allows ChkTeX warnings to show up in VS
    // Code for files in subdirectories.

    "cSpell.words": [
        "alignat",
        "alignedat",
        "amsthm",
        "Asana",
        "beamer",
        "biblatex",
        "bibtex",
        "bigcup",
        "bigg",
        "biggl",
        "bigl",
        "bigr",
        "bmatrix",
        "cenumerate",
        "cgmlr",
        "chktex",
        "citemize",
        "csquotes",
        "dcases",
        "delims",
        "denumerate",
        "ditemize",
        "doublespace",
        "Envir",
        "Fira",
        "fixdif",
        "gmlr",
        "htbp",
        "hyph",
        "ifclassloaded",
        "ifpackageloaded",
        "latexindent",
        "latexmk",
        "libexec",
        "mathit",
        "mathrm",
        "multicols",
        "newpxmath",
        "noitemsep",
        "nonstopmode",
        "nosep",
        "opentype",
        "Pagella",
        "Pandoc",
        "perpage",
        "pmatrix",
        "pseudocode",
        "seccntformat",
        "sgamex",
        "subfigure",
        "subfigures",
        "synctex",
        "tblr",
        "tempa",
        "tempb",
        "texlive",
        "texmf",
        "textcite",
        "textit",
        "textrm",
        "texttt",
        "tion",
        "varepsilon",
        "vmatrix",
        "xcolor",
        "zref"
    ]
}
