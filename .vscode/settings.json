{
    "explorer.sortOrder": "default",
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                // "-xelatex",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk",
            "tools": ["latexmk"]
        }
    ],
    "latex-workshop.latexindent.args": [
        "-c",
        "%DIR%/",
        "%TMPFILE%",
        "-l=%WORKSPACE_FOLDER%/.latexindent.yaml"
    ],
    "latex-workshop.linting.chktex.enabled": true,
    "latex-workshop.linting.chktex.exec.args": [
        // "-l",
        // "%WS1%/.chktexrc",
        // LaTeX Workshop will look for .chktexrc in the project root.
        // However, there seems to be a issue that the plugin does not expand
        // manually specified paths correctly.
        "-wall",
        "-q",
        "-n22", // allow comments
        "-n30", // allow mutiple spaces
        "-e16" // mathmode still on at end of file
    ],
    "cSpell.words": [
        "amsthm",
        "chktex",
        "hyph",
        "Palatino",
        "pseudocode",
        "subfigures"
    ]
}
